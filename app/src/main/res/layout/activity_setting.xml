<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sisy.support.ashokas.sisy.ActivitySisy.ACT_setting">

    <ImageView
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_setting_full_bg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="160dp" />

    <LinearLayout
        android:id="@+id/lyt_stg_linearlyt"
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

<TextView
    android:layout_marginTop="15dp"
    android:drawablePadding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:fontFamily="monospace"
    android:drawableLeft="@drawable/ic_report_black_24dp"
    android:text="Data is stored for only 30 days."/>
        <EditText
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="15dp"
            android:hint="username for Node....."
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/lyt_user_access"
            android:layout_width="match_parent"
            android:layout_height="55dp" />



    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/lyt_stg_linearlyt"
        android:drawableLeft="@drawable/ic_arrow_black_24dp" />


<android.support.v7.widget.CardView
    android:id="@+id/lyt_card_1"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_below="@id/textView"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="34dp"
    android:layout_alignBaseline="@id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:drawableLeft="@drawable/ic_verified_user_black_24dp"
        android:id="@+id/lyt_admin_enable"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="Enable Admin"
        android:textAlignment="center" />
</android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/lyt_card_1"
        android:drawableLeft="@drawable/ic_arrow_black_24dp" />


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        android:id="@+id/card_2"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="34dp"
        android:layout_alignBaseline="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
           android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:id="@+id/lyt_gen_pdf"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Generate PDF"
            android:textAlignment="center" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/card_2"
        android:drawableLeft="@drawable/ic_arrow_black_24dp" />


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignBaseline="@id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:id="@+id/lyt_stng_withdraw_capital"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="WithDraw Capital"
            android:textAlignment="center" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
