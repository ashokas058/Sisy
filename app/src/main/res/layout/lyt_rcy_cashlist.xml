<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/lyt_main_card"
    app:cardBackgroundColor="@color/gaycustom"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:fontFamily="serif-monospace"
            android:textStyle="italic"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:textAlignment="center"
            android:textSize="14dp"
            android:layout_width="45dp"
            android:textColor="#f6129499"
            android:layout_height="28dp"
            android:text="28"
            android:id="@+id/lyt_rcy_date" />

        <TextView
            android:layout_below="@id/lyt_rcy_date"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="2dp"
            android:textAlignment="center"
            android:textSize="14dp"
            android:layout_width="45dp"
            android:textColor="@android:color/black"
            android:layout_height="28dp"
            android:text="28"
            android:id="@+id/lyt_rcy_date_extra" />

        <TextView
            android:fontFamily="serif-monospace"
            android:textStyle="italic"
            android:id="@+id/lyt_rcy_nm_head"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/lyt_rcy_date"
            android:layout_centerHorizontal="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#f6129499"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/lyt_rcy_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
          android:layout_below="@id/lyt_rcy_nm_head"
            android:layout_centerHorizontal="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Name"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/lyt_rcy_cash_head"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Cash"
            android:fontFamily="serif-monospace"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#f6129499"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/lyt_rcy_cash"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
           android:layout_below="@id/lyt_rcy_cash_head"
            android:layout_alignParentRight="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Cash"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>